class QuantRobot( Thread ):

    # 初始化对象
    def __init__( self , ):
        Thread.__init__(self)

        # 0. had load setting , 
        # 1. 创建日志，要求每个模块都要引用 logger = log.setup_custom_logger(__name__), 在模块自身内引用logger
        # 2. 创建关键类型
        # 2.1 创建Queue用于与前方的API connector通讯
        logger.info( 'Initialize Quant Robot...' )
        data_q = Queue()
        self.q = data_q 

        # 2.2 创建链接管理器线程，添加链接
        self.cm = ConnectorManager( self.q )
        if self.cm.live :
            self.cm.start( )
        else:
            logger.error( 'Initialize failed...' )
            self.cm.exit()
            sys.exit(0)

        # 2.3 创建数据公告板
        #self.dm = DataBoard()
        #self.dm.start()

        # TODO 判断错误，退出机器人

        self.isLive = True
        logger.info( 'Initialize completed...' )


    def run(self ):
        # TOTO 
        # 1.检查各个链接的心跳，如果有问题，先重建链接，创建一个线程创建另外的链接
        # 2.调用DM，处理数据。。。
        # 3.调用线程。。。
        while self.isLive:
            try:
                if not self.q.empty():
                    msg = self.q.get()
                    logger.debug( msg )
                #else:
                #    logger.debug('data_q is empty.')

                sleep(0.1)

            except (KeyboardInterrupt, SystemExit):
                print('Start to Shutdown all thread...')
                self.exit()
                print('All thread had Shutdown.')
                sys.exit(0)


    def exit(self):
        self.cm.exit()
        self.isLive = False
        logger.info( 'Robot Shutdown completed...' )
        



